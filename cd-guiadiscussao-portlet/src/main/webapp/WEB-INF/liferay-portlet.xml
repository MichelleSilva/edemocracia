		<portlet-name>guiadiscussaoportlet</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>false</instanceable>
		<scopeable>true</scopeable>
		<header-portlet-css>/resources/css/guiadiscussao.css</header-portlet-css>
		<header-portlet-javascript>/resources/js/jquery-1.4.2.min.js</header-portlet-javascript>
		<css-class-wrapper>cd-guia-discussao-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>guiadiscussaoconfigportlet</portlet-name>
		<icon>/icon.png</icon>
		<control-panel-entry-category>content</control-panel-entry-category>
		<control-panel-entry-weight>2.2</control-panel-entry-weight>
		<scopeable>true</scopeable>
		<header-portlet-css>/resources/css/configguiadiscussao.css</header-portlet-css>
