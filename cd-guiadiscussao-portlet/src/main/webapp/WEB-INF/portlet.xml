<?xml version="1.0" encoding="UTF-8"?>
<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_5.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>

	<portlet>
		<portlet-name>guiadiscussaoportlet</portlet-name>
		<display-name>Guia da Discussão</display-name>
        <portlet-class>com.liferay.faces.bridge.GenericLiferayFacesPortlet</portlet-class>
        <init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/xhtml/guia/index.xhtml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
		<resource-bundle>content.Language</resource-bundle>	
		<portlet-info>
			<title>Guia da Discussão</title>
			<short-title>Guia Discussão</short-title>
			<keywords>Guia,Discussão</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>

	<portlet>
		<portlet-name>guiadiscussaoconfigportlet</portlet-name>
		<display-name>Configuracao do Guia da Discussão</display-name>
        <portlet-class>com.liferay.faces.bridge.GenericLiferayFacesPortlet</portlet-class>
        <init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/xhtml/config/index.xhtml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
		<resource-bundle>content.Language</resource-bundle>	
		<portlet-info>
			<title>Guia da Discussão</title>
			<short-title>Config Guia Discussão</short-title>
			<keywords>Configuração,Guia,Discussão</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>